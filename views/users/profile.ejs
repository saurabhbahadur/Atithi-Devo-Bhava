<% layout("/layouts/boilerplate") %>

  <div class="row mt-3">
    <div class="col-8  offset-3">

      <h1> Profile Page</h1>

      <div class="card  col-6 offset-2" style="width: 18rem;">
        <img class="card-img-top  mt-3 mb-3" src="..." alt="Card image cap">
        
        <div class="card-body">
          <h5 class="card-title">
            <%=user.username %>
          </h5>
          <hr>
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
            content.</p>
          <p class="card-text">
            <%=user.email %>
          </p>
        </div>
        <hr>

        <div class="card-body">
          <a href="/logout" class="card-link">LogOut</a>
          <a href="#" class="card-link">Add New Post</a>
          <a href="/listings/new" class="card-link">Add new Listing</a>
        </div>
      </div>

    </div>
  </div>