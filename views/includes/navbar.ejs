<style>
   .search-btn {
        background-color: red;
        color: white;
        border-radius: 25px;
        padding: 0.5rem 1rem;
    }

    .search-btn:hover {
        background-color: red;
        color: white;
    }

    .search-btn i {
        display: inline;
        margin-right: 0.5rem;
    }

    .search-inp {
        border-radius: 25px;
        padding: 0.5rem 1rem;
    }

    @media (max-width: 767px) {
        .navbar-nav {
            text-align: center;
            margin-top: 10px;
           
        }

        .navbar-nav a {
            margin: 0.5rem;
           
        }

        .navbar-nav.ms-auto {
            margin-top: 0;
           
        }

        .search-inp,
        .search-btn {
            width: 100%;
            margin-top: 10px;
            
        }
    }
</style>

<nav class="navbar navbar-expand-lg bg-body-light border-bottom sticky-top">
    <div class="container-fluid">

        <a class="navbar-brand" href="/"><i class="fa-solid fa-compass"></i></a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>


        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-link" href="/listings">Explore</a>
                <a class="nav-link" href="/blogs">Blogs</a>
                <a class="nav-link" href="/about">About</a>
            </div>
            <div class="navbar-nav ms-auto">
                <form class="d-flex" role="search">
                    <input class="form-control me-2 search-inp" type="search" placeholder="Search destination">
                    <button class="btn search-btn" type="submit">Search</button>
                </form>
            </div>
            <div class="navbar-nav ms-auto">
                <% if(!currUser){ %>
                    <a class="nav-link" href="/signup">SignUp</a>
                    <a class="nav-link" href="/login">LogIn</a>
                    <%}%>
                        <% if(currUser){ %>
                            <b><u><a class="nav-link" href="/profile/<%= currUser._id %>">
                                    <%= currUser.username %>
                                </u></a></b>
                            <%}%>
            </div>
        </div>


    </div>
</nav>