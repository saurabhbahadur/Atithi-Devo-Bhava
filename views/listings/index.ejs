<% layout("/layouts/boilerplate") %>
<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
    }
    .filter{
        text-align: center;
        margin-top: 2rem;
        margin-right: 2rem;
        opacity: 0.7;
    }
    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }
</style>
    <body>
        <div class="col-8 offset-3" id="filters">
            <div class="filter">
                <div><i class="fa-solid fa-fire-flame-curved"></i></div>
                <p>Trending</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Pool</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Mountain</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-tent"></i></div>
                <p>Tents</p>
            </div>
        </div>
        <div class="row row-cols-lg-3 mt-3 row-cols-md-2 row-cols-sm-1">
            <% for (let listing of allListings){ %>
                <a href="/listings/<%= listing._id %>" class="listing-link">
                    <div class="card listing-card col">
                        <img src="<%=listing.image.url  %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                        <div class="card-img-overlay">
                            hello
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listing.title %>
                                </b><br>
                                &#8377; <%= listing.price.toLocaleString("en-IN")%> /night
                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>


