<% layout("/layouts/boilerplate") %>
    <script>
        const mapToken = "<%= process.env.MAP_TOKEN%>";
        const coordinates =<%-JSON.stringify(listing.geometry.coordinates) %>;
    </script>

    <body>

        <div class="row">
            <div class="col-8  offset-3">
                <h3 class="mt-3">
                    <%= listing.title %>
                </h3>
            </div>
            <div class="card listing-card ">
                <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
                <div class="card-body">
                    <div class="card-text mt-3">
                        <p> Owned by: <i>@<%= listing.owner.username %></i></p>
                        <p>
                            <%= listing.description %>
                        </p>
                        <p> &#8377; <%= listing.price.toLocaleString("en-IN") %>
                        </p>
                        <p>
                            <%= listing.location %>
                        </p>
                        <p>
                            <%= listing.country %>
                        </p>
                    </div>
                </div>
            </div>
            <%if( currUser && currUser._id.equals(listing.owner._id)){%>
                <div class="btns">
                    <a href="/listings/<%=listing._id%>/edit" class="btn col-1 offset-2 btn-dark"><i class="fa-solid fa-pen-to-square"></i></a>


                    <form action="/listings/<%=listing._id%>?_method=DELETE" method="post">
                        <button class="btn offset-4 btn-dark"><i class="fa-solid fa-trash"></i></button>
                    </form>
                </div>
                <%}%>

                    <div class="mb-3">
                        <hr>
                        <% if(currUser) {%>
                            <h4>Leave a review</h4>

                            <!-- <div class="mb-3 mt-3 ">
                                    <label class="form-label" for="rating">Rating</label>
                                    <input required type="range" min="1" max="5" name="review[rating]" id="rating">
                                </div> -->


                            <form action="/listings/<%=listing.id%>/reviews" method="post" novalidate
                                class="needs-validation">
                                <label class="form-label" for="rating">Rating</label>
                                <fieldset class="starability-slot">

                                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]"
                                        value="1" checked aria-label="No rating." />
                                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                    <label for="first-rate1" title="Terrible">1 star</label>
                                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                    <label for="first-rate2" title="Not good">2 stars</label>
                                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                    <label for="first-rate3" title="Average">3 stars</label>
                                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                    <label for="first-rate4" title="Very good">4 stars</label>
                                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                    <label for="first-rate5" title="Amazing">5 stars</label>
                                </fieldset>
                                <div class="mb-3 mt-3 ">
                                    <label class="form-label" for="comment">Comment</label>
                                    <textarea required class="form-control" name="review[comment]" id="comment"
                                        cols="30" rows="5"></textarea>
                                    <div class="invalid-feedback">Please Submit some comments</div>
                                </div>
                                <div>
                                    <button class="btn btn-outline-dark">Submit</button>
                                </div>
                            </form>
                            <hr>

                            <%}%>

                                <% if(listing.reviews.length>0) { %>
                                    <div class="row">
                                        <p><b>All reviews</b></p>
                                        <% for(review of listing.reviews){ %>
                                            <div class="card  review-card col-5 ms-3 mb-3">
                                                <div class="card-body">
                                                    <h5 class="card-title">
                                                        Review By : <%=review.author.username %>
                                                    </h5>
                                                    <p class="starability-result card-text"
                                                        data-rating="<%=review.rating %>">
                                                    </p>
                                                    <p class="card-text">
                                                        <%=review.comment %>
                                                    </p>
                                                    <p> <%=review.createAt.toLocaleDateString("en-US") %></p>
                                                    <form
                                                        action="/listings/<%=listing.id%>/reviews/<%=review.id%>?_method=DELETE"
                                                        class="mb-3" method="post">
                                                        <%if( currUser && currUser._id.equals(review.author._id)){%>
                                                            <button class="btn btn-sm btn-dark"><i class="fa-solid fa-trash"></i></button>
                                                            <%}%>
                                                    </form>

                                                </div>

                                            </div>
                                            <%}%>
                                    </div>
                                    <%}%>
                    </div>

                    <div class=" mb-3">

                        <h3>Map</h3>
                        <div id="map"></div>
                    </div>
        </div>
    </body>

    <script src="/js/map.js"></script>